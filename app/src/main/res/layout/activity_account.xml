<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AccountActivity" android:background="@color/ic_launcher_background">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="160dp"/>
    <TextView
            android:text="@string/job_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/acnt_head_txtvw" android:layout_marginTop="105dp"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"/>
    <Button
            android:text="Post a New Job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:id="@+id/acnt_new_job_btn" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" android:layout_marginTop="500dp" android:layout_alignParentTop="true"
            android:textColor="@color/ic_launcher_background"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="160dp" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" android:layout_marginBottom="120dp" android:id="@+id/job_list"/>
</RelativeLayout>